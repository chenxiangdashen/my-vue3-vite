{
  "compilerOptions": {
    "target": "ES6",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "skipLibCheck": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/view/**/*.ts",
    "src/layout/**/*.vue",
    "src/components/**/*.vue",
    "src/components/**/*.ts",
    "./*.d.ts"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
